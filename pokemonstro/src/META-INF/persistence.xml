<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="pokemonstroPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>model.classes.Player</class>
    <class>model.classes.action.Attack</class>
    <class>model.classes.action.Effect</class>
    <class>model.classes.Inventory</class>
    <class>model.classes.element.Element</class>
    <class>model.classes.action.Action</class>
    <class>model.classes.element.Pokemonstro</class>
    <class>model.classes.element.Item</class>
    <class>model.classes.City</class>
    <class>model.classes.Building</class>
    <class>model.classes.SavedGame</class>
    <class>model.classes.Inventory_pokemonstro</class>
    <class>model.classes.Inventory_item</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:file:\db\pokemonstro;shutdown=true"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
      <property name="javax.persistence.jdbc.user" value="SA"/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
